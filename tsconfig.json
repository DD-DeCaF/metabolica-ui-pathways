{
  "compilerOptions": {
      "module": "es6",
      "target": "es5",
      "moduleResolution": "node",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "experimentalDecorators": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist",
      "rootDir": ".",
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "exclude": [
      "node_modules"
  ],
  "angularCompilerOptions": {
      "debug": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
      "rewriteTsconfig": false
  }
}
